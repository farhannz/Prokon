extends layout 
block content
  .wrapper
    h3 Data Kehadiran
    .table-responsive-sm
      table.content-table
        thead
          tr
            th No.
            th Name
            th Kelas
            th Waktu Masuk
        tbody
          - var i = 1
          each attendance in attendances
            tr
              td= i++
              td= attendance.studentId.name
              td= attendance.studentId.class_id
              td= new Date(attendance.createdAt).toLocaleDateString('id-ID', { weekday: 'long', year: 'numeric', month: 'short', day: 'numeric', hour: 'numeric', minute: 'numeric', timeZoneName: 'short' })