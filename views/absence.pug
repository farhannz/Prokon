doctype html
head
  title Form Kehadiran
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(rel='stylesheet' href='https://code.jquery.com/mobile/1.4.2/jquery.mobile-1.4.2.min.css')
  script(src='https://code.jquery.com/jquery-1.10.2.min.js')
  script(src='https://code.jquery.com/mobile/1.4.2/jquery.mobile-1.4.2.min.js')
  link(rel='stylesheet' href='/jquery-mobile.css')
  script(src='/jquery-mobile.js')
// ------------ First page for form ---------
div(data-role='page')
  // ------------ First page header ---------
  div(data-role='header')
    h1 Form Kehadiran
  // ------------ First page main content ---------
  .ui-content(data-role='main')
    .ui-grid-a
      a(href='dashboard.html' rel='external')
        input(type='image' src='/Image/Header.png')
    form(method='post' action='/students/absence' data-ajax='false')
      input#nama(type='hidden', name='nis', placeholder='Nama' value=_nis readonly)
      label(for='nama')
        | Nama : 
        span
      input#nama(type='text' name='nama' placeholder='Nama' value=_nama readonly)
      label(for='Kelas')
        | Kelas : 
        span
      input#Kelas(type='text' name='Kelas' placeholder='Kelas' value=_kelas readonly)
      fieldset(data-role='controlgroup')
            legend Kondisi Siswa:
            label(for='sehat') Sehat
            input#sehat(type='radio', name='kondisi_siswa', value='sehat' required)
            label(for='tidak_sehat') Tidak Sehat
            input#tidak_sehat(type='radio', name='kondisi_siswa', value='tidak_sehat')
      fieldset(data-role='controlgroup')
            legend Kondisi Keluarga:
            label(for='sehat') Sehat
            input#sehat(type='radio', name='kondisi_keluarga', value='sehat' required)
            label(for='tidak_sehat') Tidak Sehat
            input#tidak_sehat(type='radio', name='kondisi_keluarga', value='tidak_sehat')
      label(for='info') Keterangan :
      textarea#info(name='description' placeholder=' ' required)
      //
        <fieldset data-role="controlgroup">
        <legend>Qualification:</legend>
        <label for="graduation">Graduation</label>
        <input type="checkbox" id="graduation" value="graduation">
        <label for="postgraduation">Post Graduation</label>
        <input type="checkbox" id="postgraduation" value="postgraduation">
        <label for="other">Other</label>
        <input type="checkbox" id="other" value="other">
        </fieldset>
        <label for="info">Message:</label>
        <textarea name="addinfo" id="info" placeholder="Message"></textarea>
      input(type='submit' data-inline='true' value='Submit' data-theme='b')
  //
    -----------------------------------------------------------
    End of First page
    ------------------------------------------------------------
  // ------------ Second page ---------
  #pageone(data-role='page')
    // ------------ Second page header ---------
    div(data-role='header')
      h1 Form Kehadiran
    // ------------ Second page main content ---------
    .ui-content(data-role='main')
      h2 Form Kehadiran...!!
