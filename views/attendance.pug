doctype html
html
  head
    title Form Kehadiran
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='http://code.jquery.com/mobile/1.4.2/jquery.mobile-1.4.2.min.css')
    script(src='http://code.jquery.com/jquery-1.10.2.min.js')
    script(src='http://code.jquery.com/mobile/1.4.2/jquery.mobile-1.4.2.min.js')
    link(rel='stylesheet', href='jquery-mobile.css')
    script(src='jquery-mobile.js')
  body
    // ------------ First page for form ---------
    div(data-role='page')
      // ------------ First page header ---------
      div(data-role='header')
        h1 Form Kehadiran
      // ------------ First page main content ---------
      .ui-content(data-role='main')
        .ui-grid-a
          a(href='dashboard.html', rel='external')
            input(type='image', src='Image/Header.png')
        form(method='post', action='#pageone', data-ajax='false')
          label(for='nama')
            | Nama : 
            span
          input#nama(type='text', name='nama', placeholder='Nama')
          label(for='Kelas')
            | Kelas : 
            span
          input#Kelas(type='text', name='Kelas', placeholder='Kelas')
          label(for='Suhu')
            | Suhu : 
            span
          input#Suhu(type='text', name='Suhu', placeholder='Suhu')
          fieldset(data-role='controlgroup')
            legend Kondisi Siswa:
            label(for='sehat') Sehat
            input#sehat(type='radio', name='kondisi_siswa', value='sehat')
            label(for='tidak_sehat') Tidak Sehat
            input#tidak_sehat(type='radio', name='kondisi_siswa', value='tidak_sehat')
          fieldset(data-role='controlgroup')
            legend Kondisi Keluarga:
            label(for='sehat') Sehat
            input#sehat(type='radio', name='kondisi_keluarga', value='sehat')
            label(for='tidak_sehat') Tidak Sehat
            input#tidak_sehat(type='radio', name='kondisi_keluarga', value='tidak_sehat')
          //
            <fieldset data-role="controlgroup">
            <legend>Qualification:</legend>
            <label for="graduation">Graduation</label>
            <input type="checkbox" id="graduation" value="graduation">
            <label for="postgraduation">Post Graduation</label>
            <input type="checkbox" id="postgraduation" value="postgraduation">
            <label for="other">Other</label>
            <input type="checkbox" id="other" value="other">
            </fieldset>
            <label for="info">Message:</label>
            <textarea name="addinfo" id="info" placeholder="Message"></textarea>
          input(type='submit', data-inline='true', value='Submit', data-theme='b')
      //
        -----------------------------------------------------------
        End of First page
        ------------------------------------------------------------
      // ------------ Second page ---------
      #pageone(data-role='page')
        // ------------ Second page header ---------
        div(data-role='header')
          h1 Form Kehadiran
        // ------------ Second page main content ---------
        .ui-content(data-role='main')
          h2 Form Kehadiran...!!
      //
        -----------------------------------------------------------
        End of Second page
        ------------------------------------------------------------